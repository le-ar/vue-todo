rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /todos/{documentId} {
      allow read, delete: if true;
      allow create: if request.resource.data.keys().hasOnly(['text', 'is_completed'])
        && request.resource.data.keys().hasAll(['text', 'is_completed'])
        && request.resource.data.text is string
        && request.resource.data.is_completed is bool
    }
    match /docs_count/todos {
      allow read: if true;
    }
	}
}